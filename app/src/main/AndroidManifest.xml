<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.canaria">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".SelectFriendsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".UserProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ChatRoomActivity" /> <!-- <activity android:name=".FriendFinder_Fragment1_MyCodeFragment" /> -->
        <!-- <activity android:name=".FriendFinder_Fragment1_ScanFragment" /> -->
        <!-- <activity android:name=".FriendFinder_Fragment2" /> -->
        <!-- <activity android:name=".FriendFinder_Fragment1" /> -->
        <activity
            android:name=".SmsVerification_SecondActivity"
            android:label="@string/title_activity_sms_verification2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SmsVerificationActivity"
            android:label="@string/title_activity_sms_verification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RedirectActivity"
            android:label="@string/redirect"
            android:theme="@android:style/Theme.NoDisplay" />
        <activity
            android:name=".MainActivity"
            android:label="@string/main"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SignInActivity"
            android:label="@string/sign_in"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FriendFinderActivity"
            android:hardwareAccelerated="true"
            android:label="friend_finder"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme"
            tools:replace="screenOrientation" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>