<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".login.SignUpActivity">


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginBottom="20dp">-->

            <!--<Button-->
                <!--android:id="@+id/signup_with_facebook_btn"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="match_parent"-->
                <!--android:text="Facebook"-->
                <!--android:layout_marginRight="10dp"/>-->

            <!--<Button-->
                <!--android:id="@+id/signup_with_google_btn"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="match_parent"-->
                <!--android:text="Google"/>-->

        <!--</LinearLayout>-->


        <Button
            android:id="@+id/signup_with_email_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:text="SignUp with Email"/>

        <LinearLayout
            android:id="@+id/signup_with_email_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


            <EditText
                android:id="@+id/signup_username_editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#80DCDCDC"
                android:ems="30"
                android:fontFamily="sans-serif-light"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textAllCaps="false"
                android:textColor="#4B73E1"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/signup_username_warning_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:visibility="gone"/>


            <EditText
                android:id="@+id/signup_email_editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="#80DCDCDC"
                android:ems="30"
                android:fontFamily="sans-serif-light"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textAllCaps="false"
                android:textColor="#4B73E1"
                android:textSize="25dp"  />

            <TextView
                android:id="@+id/signup_email_warning_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:visibility="gone"/>


            <EditText
                android:id="@+id/signup_password_editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="#80DCDCDC"
                android:ems="30"
                android:fontFamily="sans-serif-light"
                android:hint="Password"
                android:inputType="textPassword"
                android:textAllCaps="false"
                android:textColor="#4B73E1"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/signup_password_warning_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:visibility="gone"/>


            <EditText
                android:id="@+id/signup_confirm_password_editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="#80DCDCDC"
                android:ems="30"
                android:fontFamily="sans-serif-light"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textAllCaps="false"
                android:textColor="#4B73E1"
                android:textSize="25dp"  />


            <TextView
                android:id="@+id/signup_password2_warning_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/signup_cofirm_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_bg"
                android:clickable="true"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical|center_horizontal"
                android:text="Sign up"
                android:textColor="#DCDCDC"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/signup_alreadyHaveAccount_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:background="@drawable/border"
            android:text="@string/login"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="15sp" />

    </LinearLayout>




</RelativeLayout>