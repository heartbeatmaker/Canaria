<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/sent_message_textView"
        android:text="hello, hello!"
        android:background="@drawable/rounded_rectangle_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/sent_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/sent_message_textView"
        app:layout_constraintRight_toLeftOf="@+id/sent_message_textView"
        app:layout_constraintTop_toTopOf="parent">


        <FrameLayout
            android:id="@+id/sent_image_frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sent_time_textView">

            <ImageView
                android:id="@+id/sent_image_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"/>

            <LinearLayout
                android:id="@+id/sent_video_info_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_black"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">

                <ImageView
                    android:id="@+id/sent_video_play_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_play_circle_outline_black_24dp" />

                <TextView
                    android:id="@+id/sent_video_play_textView"
                    android:layout_below="@id/sent_video_play_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="02:56"
                    android:textColor="@color/white" />
            </LinearLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/sent_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="11:40"
            android:textSize="10sp"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>