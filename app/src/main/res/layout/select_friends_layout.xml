<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/selectFriends_relativeLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/white_boarder"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/selectFriends_profileImage"
            android:layout_gravity="center"
            android:layout_width="59dp"
            android:layout_height="61dp"
            android:layout_weight="0"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_person_black_24dp" />


        <TextView
            android:id="@+id/selectFriends_name_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Name"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/selectFriends_friendId_textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0" />

        <CheckBox
            android:id="@+id/selectFriends_checkBox"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:button="@drawable/selector_checkbox"
            android:paddingRight="50dp"/>

    </LinearLayout>
</RelativeLayout>