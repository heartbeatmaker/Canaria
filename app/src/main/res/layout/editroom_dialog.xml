<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/darkGrey"
    android:orientation="vertical">


    <TextView
        android:id="@+id/editRoom_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Chatroom Name"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/editRoom_dialog_title">

        <EditText
            android:id="@+id/editRoom_dialog_editText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="18sp"
            android:padding="10dp"/>

        <!--<TextView-->
            <!--android:id="@+id/editRoom_dialog_textView"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:textColor="@color/grey"-->
            <!--android:padding="10dp"/>-->

    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/dialog_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <Button
            android:id="@+id/editRoom_dialog_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="@color/grey"
            android:text="Cancel"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/editRoom_dialog_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="@color/grey"
            android:text="Confirm" />


    </LinearLayout>



</RelativeLayout>