<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".login.SmsVerificationActivity">


    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your zipCode"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#80DCDCDC"
            android:layout_marginBottom="10dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sms_countryCode_spinner"
                android:textAllCaps="false">
            </Spinner>
        </RelativeLayout>


        <EditText
            android:id="@+id/sms_phoneNumber_editText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#80DCDCDC"
            android:ems="30"
            android:hint="Your phone number"
            android:fontFamily="sans-serif-light"
            android:inputType="phone"
            android:textAllCaps="false"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/sms_code_warning_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/sms_send_btn"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_bg"
            android:clickable="true"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|center_horizontal"
            android:text="Request code"
            android:textColor="#DCDCDC"
            android:textSize="20sp" />


    </LinearLayout>




</RelativeLayout>